<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetCredentialsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/maroonbg"/>

    <ImageView
        android:id="@+id/whitebg"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:background="@drawable/roundedbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/maroonbg"
        app:layout_constraintTop_toTopOf="@id/whitebg"
        app:layout_constraintEnd_toEndOf="@id/whitebg"
        app:layout_constraintStart_toStartOf="@id/whitebg"/>

    <EditText
        android:id="@+id/set_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedborder"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/whitebg"
        app:layout_constraintStart_toStartOf="@+id/whitebg"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <EditText
        android:id="@+id/set_studentnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedborder"
        android:ems="10"
        android:hint="Student Number"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/whitebg"
        app:layout_constraintStart_toStartOf="@+id/whitebg"
        app:layout_constraintTop_toBottomOf="@+id/set_username" />


    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedbg"
        android:backgroundTint="@color/green"
        android:onClick="submitButtonClicked"
        android:text="Submit"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/whitebg"
        app:layout_constraintStart_toStartOf="@+id/whitebg"
        app:layout_constraintTop_toBottomOf="@+id/set_studentnumber" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedbg"
        android:backgroundTint="@color/green"
        android:onClick="backButtonClicked"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/whitebg"
        app:layout_constraintStart_toStartOf="@+id/whitebg"
        app:layout_constraintTop_toBottomOf="@+id/button_submit" />


</androidx.constraintlayout.widget.ConstraintLayout>