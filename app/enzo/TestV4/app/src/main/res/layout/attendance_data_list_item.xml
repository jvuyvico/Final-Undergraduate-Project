<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:padding="15dp"
    android:background="@drawable/subjectbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="25"
        android:weightSum="100">

        <TextView
            android:id="@+id/tv_ad_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textColor="@color/maroon"
            android:layout_weight="50"/>
        <TextView
            android:id="@+id/tv_ad_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="24sp"
            android:layout_weight="50"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ad_uuid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UUID"
        android:textColor="@color/gray"
        android:fontFamily="@font/montserrat"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:weightSum="100" >

        <TextView
            android:id="@+id/tv_ad_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_weight="25"
            android:textColor="@color/gray"
            android:fontFamily="@font/montserrat"/>
        <TextView
            android:id="@+id/tv_ad_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_weight="25"
            android:textColor="@color/gray"
            android:fontFamily="@font/montserrat"/>
        <TextView
            android:id="@+id/tv_ad_major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Major"
            android:layout_weight="25"
            android:textColor="@color/gray"
            android:fontFamily="@font/montserrat"/>
        <TextView
            android:id="@+id/tv_ad_minor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minor"
            android:layout_weight="25"
            android:textColor="@color/gray"
            android:fontFamily="@font/montserrat"/>
    </LinearLayout>
    
</LinearLayout>

